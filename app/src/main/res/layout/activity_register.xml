<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRegistration"
            android:layout_width="match_parent"
            android:text="Registration"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/edit_text_top"
            android:layout_marginRight="@dimen/edit_text_right"
            android:text="Full Name"
            android:textStyle="bold"
            android:textSize="@dimen/title_font_size"
            android:fontFamily="@font/ubunto_medium"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/margin_8"
            android:hint="Full Name"
            android:layout_marginRight="@dimen/edit_text_right"
            android:padding="@dimen/edit_text_padding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/edit_text_top"
            android:layout_marginRight="@dimen/edit_text_right"
            android:text="Mobile No"
            android:textStyle="bold"
            android:textSize="@dimen/title_font_size"
            android:fontFamily="@font/ubunto_medium"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/margin_8"
            android:hint="Mobile No"
            android:inputType="number"
            android:layout_marginRight="@dimen/edit_text_right"
            android:padding="@dimen/edit_text_padding"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/edit_text_top"
            android:layout_marginRight="@dimen/edit_text_right"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="@dimen/title_font_size"
            android:fontFamily="@font/ubunto_medium"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/margin_8"
            android:hint="Email"
            android:inputType="text"
            android:layout_marginRight="@dimen/edit_text_right"
            android:padding="@dimen/edit_text_padding"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/edit_text_top"
            android:layout_marginRight="@dimen/edit_text_right"
            android:text="Password"
            android:textStyle="bold"
            android:textSize="@dimen/title_font_size"
            android:fontFamily="@font/ubunto_medium"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/margin_8"
            android:hint="*****"
            android:layout_marginRight="@dimen/edit_text_right"
            android:padding="@dimen/edit_text_padding"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/edit_text_top"
            android:layout_marginRight="@dimen/edit_text_right"
            android:text="Confirm Password"
            android:textStyle="bold"
            android:textSize="@dimen/title_font_size"
            android:fontFamily="@font/ubunto_medium"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/margin_8"
            android:hint="*****"
            android:layout_marginRight="@dimen/edit_text_right"
            android:padding="@dimen/edit_text_padding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/edit_text_top"
            android:layout_marginRight="@dimen/edit_text_right"
            android:text="Bus No."
            android:textStyle="bold"
            android:textSize="@dimen/title_font_size"
            android:fontFamily="@font/ubunto_medium"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/busNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/margin_8"
            android:hint="Bus Number"
            android:layout_marginRight="@dimen/edit_text_right"
            android:padding="@dimen/edit_text_padding"/>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:text="Create Driver"
            android:layout_marginLeft="@dimen/edit_text_left"
            android:layout_marginTop="@dimen/edit_text_top"
            android:layout_marginRight="@dimen/edit_text_right"
            android:layout_marginBottom="24dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_login_btn_color"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>